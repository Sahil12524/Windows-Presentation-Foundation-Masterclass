<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="320">

    <Grid Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblResult" Content="0"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               FontSize="60"
               Grid.ColumnSpan="4"/>
        <Button x:Name="btnAC" Content="AC"
                Style="{StaticResource additionalButtonsStyle}"
                Grid.Row="1"
                Grid.Column="0"
                Margin="1"/>
        <Button x:Name="btnNegate" Content="+/-"
                Style="{StaticResource additionalButtonsStyle}"
                Grid.Row="1"
                Grid.Column="1"
                Margin="1"/>
        <Button x:Name="btnPercent" Content="%"
                Style="{StaticResource additionalButtonsStyle}"
                Grid.Row="1"
                Grid.Column="2"
                Margin="1"/>
        <Button x:Name="btnDivision" Content="/"
                Style="{StaticResource operatorButtonsStyle}"
                Click="BtnOperations_Click"
                Grid.Row="1"
                Grid.Column="3"
                Margin="1"/>
        <Button x:Name="btnSeven" Content="7"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="2"
                Grid.Column="0"
                Margin="1"/>
        <Button x:Name="btnEight" Content="8"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="2"
                Grid.Column="1"
                Margin="1"/>
        <Button x:Name="btnNine" Content="9"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="2"
                Grid.Column="2"
                Margin="1"/>
        <Button x:Name="btnMultiplication" Content="*"
                Style="{StaticResource operatorButtonsStyle}"
                Click="BtnOperations_Click"
                Grid.Row="2"
                Grid.Column="3"
                Margin="1"/>
        <Button x:Name="btnFour" Content="4"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="3"
                Grid.Column="0"
                Margin="1"/>
        <Button x:Name="btnFive" Content="5"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="3"
                Grid.Column="1"
                Margin="1"/>
        <Button x:Name="btnSix" Content="6"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="3"
                Grid.Column="2"
                Margin="1"/>
        <Button x:Name="btnSubtraction" Content="-"
                Style="{StaticResource operatorButtonsStyle}"
                Click="BtnOperations_Click"
                Grid.Row="3"
                Grid.Column="3"
                Margin="1"/>
        <Button x:Name="btnOne" Content="1"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="4"
                Grid.Column="0"
                Margin="1"/>
        <Button x:Name="btnTwo" Content="2"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="4"
                Grid.Column="1"
                Margin="1"/>
        <Button x:Name="btnThree" Content="3"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="4"
                Grid.Column="2"
                Margin="1"/>
        <Button x:Name="btnAddition" Content="+"
                Style="{StaticResource operatorButtonsStyle}"
                Click="BtnOperations_Click"
                Grid.Row="4"
                Grid.Column="3"
                Margin="1"/>
        <Button x:Name="btnZero" Content="0"
                Style="{StaticResource numberButtonsStyle}"
                Click="BtnNumbers_Click"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="1"/>
        <Button x:Name="btnFloat" Content="."
                Style="{StaticResource numberButtonsStyle}"
                Click="btnFloat_Click"
                Grid.Row="5"
                Grid.Column="2"
                Margin="1"/>
        <Button x:Name="btnEqual" Content="="
                Style="{StaticResource operatorButtonsStyle}"
                Grid.Row="5"
                Grid.Column="3"
                Margin="1"/>
    </Grid>
</Window>
